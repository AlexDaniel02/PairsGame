<Window x:Class="PairsGame.StatisticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PairsGame"
        mc:Ignorable="d"
        Background="Lavender"
        Title="StatisticsWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="225"/>
            <RowDefinition Height="225"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="400"/>
        </Grid.ColumnDefinitions>
        <Image x:Name="profilePicture" Width="250" Height="150" Grid.Row="0" Grid.Column="1"/>
        <Label x:Name="userLabel"  Grid.Row="0" Grid.Column="0" FontSize="32" Margin="50,0,0,0"/>
        <Label x:Name="gamesPlayedLabel" Grid.Row="1" Grid.Column="0" FontSize="24" />
        <Label x:Name="gamesWonLabel" Grid.Row="1" Grid.Column="1" FontSize="24" />
    </Grid>
</Window>
